<div class="wrapper">
    <div class="page-width feature-row">
        {% capture media_layout %}
        <div class="feature-row__item">
            {% if section.settings.image != blank %}
            <noscript>
                {{ section.settings.image | img_url: '600x600' | img_tag: section.settings.image.alt,
                'feature-row__image-no-js' }}
            </noscript>
            <div class="feature-row__image-wrapper"
                style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100}}%;">
                {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                <img class="feature-row__image lazyload" src="{{ section.settings.image | img_url: '300x300' }}"
                    data-src="{{ img_url }}" data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                    data-aspectratio="{{ section.settings.image.aspect_ratio }}" data-sizes="auto"
                    alt="{{ section.settings.image.alt | escape }}">
            </div>
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        </div>
        {% endcapture %}

        <div class="feature-row">
            {% if section.settings.layout == 'left' %}
            {{ media_layout }}
            {% endif %}

            <div class="feature-row__item feature-row__text feature-row__text--{{ section.settings.layout }}">
                {% if section.settings.title != blank %}
                <h2 class="h3">{{ section.settings.title | escape }}</h2>
                {% endif %}
                {% if section.settings.text != blank %}
                <div class="rte-setting featured-row__subtext">{{ section.settings.text }}</div>
                {% endif %}
                {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="btn">
                    {{ section.settings.button_label | escape }}
                </a>
                {% endif %}
            </div>

            {% if section.settings.layout == 'right' %}
            {{ media_layout }}
            {% endif %}
        </div>
    </div>
</div>



{% schema %}
{
	"name": {
		"en": "ANDBOX Half Container"
	},
	"settings": [{
			"type": "image_picker",
			"id": "image",
			"label": {
				"en": "Image"
			}
		},
		{
			"type": "select",
			"id": "layout",
			"label": {
				"en": "Image alignment"
			},
			"default": "left",
			"options": [{
					"value": "left",
					"label": {
						"en": "Left"
					}
				},
				{
					"value": "right",
					"label": {
						"en": "Right"
					}
				}
			]
		},
		{
			"type": "text",
			"id": "title",
			"label": {
				"en": "Heading"
			},
			"default": {
				"en": "ANDBOX Half Container"
			}
		},
		{
			"type": "richtext",
			"id": "text",
			"label": {
				"en": "Text"
			},
			"default": {
				"en": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
			}
		},
		{
			"type": "text",
			"id": "button_label",
			"label": {
				"en": "Button label"
			}
		},
		{
			"type": "url",
			"id": "button_link",
			"label": {
				"en": "Button link"
			}
		}
	],
	"presets": [{
		"name": {
			"en": "ANDBOX Half Container"
		},
		"category": {
			"en": "Image"
		}
	}]
}
{% endschema %}